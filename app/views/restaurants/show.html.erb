<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.address %></h2>
<p>Here we serve <%= @restaurant.category %> food!</p>
<ul class="list-group mb-3">
  <h3>Reviews:</h3>
  <% @restaurant.reviews.each do |review| %>
  <li class="list-group-item">
    <% review.rating.times do %>
      <%= icon('fas', 'star') %>
    <% end %>
    <% (5 - review.rating).times do %>
      <%= icon('far', 'star') %>
    <% end %>
    -
    <%= review.content %>
  </li>
  <% end %>
</ul>

<%# <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-success"  %>
<h3>Add a review:</h3>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :rating %>
  <%= f.input :content %>
  <%= f.submit class: "btn btn-success" %>
<% end %>

<%= link_to "Back", restaurants_path, class: "mt-3 btn btn-primary"  %>
