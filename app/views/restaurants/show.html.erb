<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.address %></h2>
<p>Here we serve <%= @restaurant.category %> food!</p>
<ul class="list-group mb-3">
  <h3>Reviews:</h3>
  <% @restaurant.reviews.each do |review| %>
  <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-success"  %>

<%= link_to "Back", restaurants_path, class: "btn btn-primary"  %>
